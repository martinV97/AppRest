<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmd.martin.distribuidosapp.activities.Menu">

    <Button
        android:id="@+id/buttonMenuClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showClients"
        android:text="Clientes"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="118dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarMenu"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="45dp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/buttonMenuClient"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenuClient"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:visibility="invisible" />
</android.support.constraint.ConstraintLayout>
